<resources>

    <!-- App Theme -->

    <style name="AppBaseTheme" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="AppBaseTheme.Light" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="android:dialogTheme">@style/DialogTheme.Light</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Light</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="AppTheme.Light" parent="AppBaseTheme.Light">
    </style>


    <!-- Dialog Theme -->

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Fix broken dialog shadow on Android 4.x devices -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogTheme.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Fix broken dialog shadow on Android 4.x devices -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- Dialog Theme without transparent window -->

    <style name="SetHomeDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SetHomeDialogTheme.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- To make PreferenceCategory's text bold for devices with API <21 -->
    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
