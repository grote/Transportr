<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<com.google.android.material.card.MaterialCardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/searchBarHeight"
		android:layout_marginStart="@dimen/searchBarMargins"
		android:layout_marginTop="@dimen/searchBarMargins"
		android:layout_marginEnd="@dimen/searchBarMargins"
		app:cardCornerRadius="@dimen/searchBarCornerRadius">

		<de.grobox.transportr.locations.LocationView
			android:id="@+id/location_input"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:hint="@string/home_dialog_title">

			<requestFocus />

		</de.grobox.transportr.locations.LocationView>

	</com.google.android.material.card.MaterialCardView>
</LinearLayout>